<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Info Text (Volume/Brightness) -->
    <TextView
        android:id="@+id/ctl_infotext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/info_text_background"
        android:elevation="999dp"
        android:text="Volume: xxx%"
        android:textAllCaps="true"
        android:textColor="@color/info_text_text"
        android:textSize="20sp"
        android:visibility="invisible"
        tools:ignore="HardcodedText" />

    <!-- actual controls -->
    <de.shadow578.yetanothervideoplayer.feature.controlview.TapToHidePlayerControlView
        android:id="@+id/ctl_playercontrols"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:controller_layout_id="@layout/layout_exo_controls"
        app:use_artwork="true"/>
</RelativeLayout>
