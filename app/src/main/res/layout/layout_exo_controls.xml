<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/controls_vignette"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    tools:targetApi="28">

    <!-- top bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/transparent"
        android:orientation="vertical">

        <!-- stream title -->
        <TextView
            android:id="@+id/pb_streamTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="2.5dp"
            android:text="Test Video Title"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/player_title_text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <!-- todo: top controls (settings button, ...) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageButton
                android:id="@id/exo_prev"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/exo_controls_fullscreen_enter" />

        </LinearLayout>

    </RelativeLayout>

    <!-- center controls -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <!-- rewind button -->
        <ImageButton
            android:id="@id/exo_rew"
            style="@style/AppButton.FastRewindButton"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:contentDescription="@string/exo_controls_rewind_description"
            android:visibility="visible" />

        <!-- play/pause button -->
        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="45dp"
            android:clipChildren="false">

            <ImageButton
                android:id="@id/exo_play"
                style="@style/AppButton.PlayButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/exo_controls_play_description" />

            <ImageButton
                android:id="@id/exo_pause"
                style="@style/AppButton.PauseButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/exo_controls_pause_description"
                android:visibility="invisible" />
        </FrameLayout>

        <!-- fast forward button -->
        <ImageButton
            android:id="@id/exo_ffwd"
            style="@style/AppButton.FastForwardButton"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:contentDescription="@string/exo_controls_fastforward_description"
            android:visibility="visible" />
    </LinearLayout>

    <!-- bottom controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- playback position -->
        <TextView
            android:id="@id/exo_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="@color/player_progress_labels_text"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- (placeholder) progress seek bar -->
        <View
            android:id="@id/exo_progress_placeholder"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="1" />

        <!-- video duration -->
        <TextView
            android:id="@id/exo_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="@color/player_progress_labels_text"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- screen orientation (portrait/landscape/auto) toggle -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <!-- locked: portrait -->
            <ImageButton
                android:id="@+id/pb_screen_roation_portrait"
                style="@style/AppButton.ScreenLockPortrait"
                android:contentDescription="@string/pb_controls_screen_lock_portrait"
                android:onClick="playback_OnClick"
                android:visibility="invisible" />

            <!-- locked: landscape -->
            <ImageButton
                android:id="@+id/pb_screen_roation_landscape"
                style="@style/AppButton.ScreenLockLandscape"
                android:contentDescription="@string/pb_controls_screen_lock_landscape"
                android:onClick="playback_OnClick"
                android:visibility="invisible" />

            <!-- automatic/device default -->
            <ImageButton
                android:id="@+id/pb_screen_roation_auto"
                style="@style/AppButton.ScreenAuto"
                android:contentDescription="@string/pb_controls_screen_auto"
                android:onClick="playback_OnClick"
                android:visibility="visible" />
        </RelativeLayout>

    </LinearLayout>


