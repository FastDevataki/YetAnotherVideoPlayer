<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- App Theme colors -->
    <color name="colorPrimary">#008577</color>
    <color name="colorPrimaryDark">#00574B</color>
    <color name="colorAccent">#D81B60</color>

    <!-- shared colors -->
    <color name="white">#FFFFFF</color>
    <color name="black">#000000</color>
    <color name="transparent">#00000000</color>
    <color name="hotpink">#FF64B4</color>
    <color name="default_text">#FFBEBEBE</color>
    <color name="default_trans_background">#80000000</color>

    <!-- specific colors -->
    <!-- ~~ activity_playback ~~ -->
    <!-- background color of info text (Volume: x%) label -->
    <color name="info_text_background">@color/default_trans_background</color>

    <!-- text color of info text (Volume: x%) label -->
    <color name="info_text_text">@color/default_text</color>

    <!-- color of buffering state spinner (indeterminate circular progress bar) -->
    <color name="player_buffering_progress">@color/default_text</color>

    <!-- start color of the player controls background vignette, used to darken the video while showing the controls-->
    <color name="player_vignette_start">#3E000000</color>

    <!-- start color of the player controls background vignette, used to darken the video while showing the controls-->
    <color name="player_vignette_end">#BC000000</color>


    <!-- ~~ layout_exo_controls ~~ -->
    <!-- text color of the playback progress / duration labels -->
    <color name="player_progress_labels_text">@color/default_text</color>

    <!-- text color of the playback title label -->
    <color name="player_title_text">@color/default_text</color>

    <!-- color of the top buttons in layout_exo_controls (cast/settings) -->
    <color name="player_top_buttons">@color/default_text</color>

    <!-- color tint of the center buttons in layout_exo_controls (play/pause/fast forward/reverse) -->
    <color name="player_center_buttons">@color/white</color>

    <!-- color tint of the screen rotation buttons in layout_exo_controls (lock_landscape/lock_portrait/auto) -->
    <color name="player_screen_rotation_buttons">@color/default_text</color>

    <!-- ~~ layout_playback_quick_settings ~~ -->
    <color name="qs_background">@color/default_trans_background</color>

    <color name="qs_item_background">#69000000</color>

    <color name="qs_item_text">@color/default_text</color>

    <color name="qs_item_icon_default">@color/white</color>

    <color name="qs_item_icon_active">#FC9191</color>
</resources>
